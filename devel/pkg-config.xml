    </implementation>
      <implementation arch="Linux-x86_64" id="sha1new=221455243b97d96b3db60220482cde5705c2196f" main="bin/pkg-config" released="2011-05-29" version="0.25-1.1">
      <archive href="pkg-config-amd64-0.25-1.1.tar.bz2" size="59401"/>
