    <url-protocol id="cel">
      <description>Celestia protocol</description>
      <verb name="open" args="--once -u &quot;%V&quot;"/>
    </url-protocol>
    <file-type id="celestia_script">
      <description>Celestia script</description>
      <verb name="open" args="--once -u &quot;%V&quot;"/>
      <extension value=".cel"/>
      <extension value=".celx"/>
      <extension value=".clx"/>
