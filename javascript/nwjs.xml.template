<?xml version="1.0" encoding="utf-8"?>
<interface xmlns="http://zero-install.sourceforge.net/2004/injector/interface">
  <name>NW.js</name>
  <summary>write desktop applications with all Web technologies</summary>
  <description>NW.js (previously known as node-webkit) lets you call all Node.js modules directly from DOM and enables a new way of writing applications with all Web technologies.</description>
  <homepage>https://nwjs.io/</homepage>
  <icon href="http://nwjs.io/img/logo.png" type="image/png"/>

  <feed-for interface="https://apps.0install.net/javascript/nwjs.xml"/>

  <group license="MIT License">
    <implementation arch="Linux-x86_64" main="nw" version="{version}" released="{released}" stability="{stability}">
      <manifest-digest/>
      <archive href="https://dl.nwjs.io/v{version-original}/nwjs-v{version-original}-linux-x64.tar.gz" type="application/x-compressed-tar" extract="nwjs-v{version-original}-linux-x64"/>
    </implementation>
    <implementation arch="Linux-i486" main="nw" version="{version}" released="{released}" stability="{stability}">
      <manifest-digest/>
      <archive href="https://dl.nwjs.io/v{version-original}/nwjs-v{version-original}-linux-ia32.tar.gz" type="application/x-compressed-tar" extract="nwjs-v{version-original}-linux-ia32"/>
    </implementation>
    <implementation arch="Darwin-x86_64" main="nwjs.app/Contents/MacOS/nwjs" version="{version}" released="{released}" stability="{stability}">
      <manifest-digest/>
      <archive href="https://dl.nwjs.io/v{version-original}/nwjs-v{version-original}-osx-x64.zip" type="application/zip" extract="nwjs-v{version-original}-osx-x64"/>
    </implementation>
    <implementation arch="Windows-x86_64" main="nw.exe" version="{version}" released="{released}" stability="{stability}">
      <manifest-digest/>
      <archive href="https://dl.nwjs.io/v{version-original}/nwjs-v{version-original}-win-x64.zip" type="application/zip" extract="nwjs-v{version-original}-win-x64"/>
    </implementation>
    <implementation arch="Windows-i486" main="nw.exe" version="{version}" released="{released}" stability="{stability}">
      <manifest-digest/>
      <archive href="https://dl.nwjs.io/v{version-original}/nwjs-v{version-original}-win-ia32.zip" type="application/zip" extract="nwjs-v{version-original}-win-ia32"/>
    </implementation>
  </group>
</interface>
