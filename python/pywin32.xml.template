      <implementation arch="Windows-x86_64" released="{released}" stability="stable" version="{version}">
        <manifest-digest/>
        <archive href="pywin32-{version}.win-amd64-py3.6.tar.gz" type="application/x-compressed-tar"/>
      </implementation>
      <implementation arch="Windows-i486" released="{released}" stability="stable" version="{version}">
        <manifest-digest/>
        <archive href="pywin32-{version}.win32-py3.6.tar.gz" type="application/x-compressed-tar"/>
      </implementation>
    </group>

    <group>
      <restricts interface="https://apps.0install.net/python/python.xml" version="3.7..!3.8"/>
      <implementation arch="Windows-x86_64" released="{released}" stability="stable" version="{version}">
        <manifest-digest/>
        <archive href="pywin32-{version}.win-amd64-py3.7.tar.gz" type="application/x-compressed-tar"/>
      </implementation>
      <implementation arch="Windows-i486" released="{released}" stability="stable" version="{version}">
        <manifest-digest/>
        <archive href="pywin32-{version}.win32-py3.7.tar.gz" type="application/x-compressed-tar"/>
      </implementation>
    </group>

    <group>
      <restricts interface="https://apps.0install.net/python/python.xml" version="3.8..!3.9"/>
      <implementation arch="Windows-x86_64" released="{released}" stability="stable" version="{version}">
        <manifest-digest/>
        <archive href="pywin32-{version}.win-amd64-py3.8.tar.gz" type="application/x-compressed-tar"/>
      </implementation>
      <implementation arch="Windows-i486" released="{released}" stability="stable" version="{version}">
        <manifest-digest/>
        <archive href="pywin32-{version}.win32-py3.8.tar.gz" type="application/x-compressed-tar"/>
